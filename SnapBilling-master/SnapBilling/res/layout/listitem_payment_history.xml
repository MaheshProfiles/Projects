<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="366dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/payment_date_textview"
            style="@style/customermgmt_name_textstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="roboto-regular" />

        <TextView
            android:id="@+id/payment_type_textview"
            style="@style/customermgmt_name_textstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/divider_color" />

    <TextView
        android:id="@+id/payment_amount_textview"
        style="@style/customermgmt_name_textstyle"
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/divider_color" />

    <ImageButton
        android:id="@+id/customer_payment_editbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/customer_edit_imgselector" />

</LinearLayout>