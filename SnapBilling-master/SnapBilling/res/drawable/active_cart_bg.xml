<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item> 
    	<shape android:shape="rectangle">
	    	<stroke
		        android:width="12dip"
		        android:color="@color/active_shopping_cart_shadow"/>
	    	<corners android:bottomLeftRadius="4dp"  
	     			 android:topRightRadius="10dp"/> 
	    	<padding
		        android:bottom="5dip"
		        android:left="0dip"
		        android:right="5dip"
		        android:top="0dip"/>
    	</shape>
  	</item>   
    <item>  
     	<shape android:shape="rectangle"> 
      		<solid android:color="@color/active_shopping_cart_bgcolor" />
    	</shape>
   </item>    
 </layer-list>  
