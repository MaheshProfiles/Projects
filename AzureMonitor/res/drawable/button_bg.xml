<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true"><shape>
            <gradient android:angle="180" android:endColor="#79c253" android:startColor="#61bc46" />

            <stroke android:width="1dip" android:color="#61bc46" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />

            <corners android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp" android:radius="3dp" android:topLeftRadius="3dp" android:topRightRadius="3dp"></corners>
        </shape></item>
    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="#0e0e0e" android:startColor="#6b6b6b" />

            <stroke android:width="1dp" android:color="#d39f04" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />

            <corners android:bottomLeftRadius="3dip" android:bottomRightRadius="3dip" android:topLeftRadius="3dip" android:topRightRadius="3dip" />
        </shape></item>
    <item><shape>
            <gradient android:angle="180" android:endColor="#79c253" android:startColor="#61bc46" />

            <stroke android:width="1dip" android:color="#61bc46" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />

            <corners android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp" android:radius="3dp" android:topLeftRadius="3dp" android:topRightRadius="3dp" />
        </shape></item>

</selector>