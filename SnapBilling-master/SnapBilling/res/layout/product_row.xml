<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_row"
    style="@style/billitem_name_textstyle"
    android:layout_width="wrap_content"
    android:layout_height="160dp"
    android:descendantFocusability="blocksDescendants" >

    <TextView
        android:id="@+id/productname_textview"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/productmrp_textview"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/productmrp_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/productrate_textview"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/productrate_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/black"
        android:textSize="26sp" />

</RelativeLayout>