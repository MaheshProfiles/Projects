<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/brand_distributor_width"
    android:layout_height="@dimen/brand_distributor_height"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/brand_imageview"
        android:layout_width="@dimen/brand_distributor_width"
        android:layout_height="@dimen/brand_distributor_height"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/brand_selected_imagebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/brand_selection_selector" />

</RelativeLayout>