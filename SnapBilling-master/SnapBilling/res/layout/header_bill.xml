<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/billmonitor_bill_width"
    android:layout_height="wrap_content"
    android:background="@color/header_bgcolor"
    android:clickable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:weightSum="4" >

    <TextView
        android:id="@+id/qty_textview"
        style="@style/bill_header_textstyle"
        android:layout_width="0dp"
        android:layout_height="@dimen/billmonitor_billheader_height"
        android:layout_weight="1"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/medium_padding"
        android:text="@string/qty" />

    <TextView
        android:id="@+id/price_textview"
        style="@style/bill_header_textstyle"
        android:layout_width="0dp"
        android:layout_height="@dimen/billmonitor_billheader_height"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/mrp" />

    <RelativeLayout
        android:id="@+id/rate_textview_TextLayout"
        style="@style/bill_header_textstyle"
        android:layout_width="0dp"
        android:layout_height="@dimen/billmonitor_billheader_height"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/rate_textview"
            style="@style/bill_header_textstyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/billmonitor_billheader_height"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/rate_dropdwn_imageview"
            android:gravity="center"
            android:text="@string/rate" />

        <ImageView
            android:id="@+id/rate_dropdwn_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:background="@drawable/icon_customer_arrow_down" />
    </RelativeLayout>

    <TextView
        android:id="@+id/total_textview"
        style="@style/bill_header_textstyle"
        android:layout_width="0dp"
        android:layout_height="@dimen/billmonitor_billheader_height"
        android:layout_weight="1"
        android:gravity="right|center_vertical"
        android:paddingRight="@dimen/medium_padding"
        android:text="@string/total" />

</LinearLayout>