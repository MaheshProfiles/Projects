<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/brand_distributor_width"
    android:layout_height="@dimen/brand_distributor_height"
    android:background="@android:color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/brand_imageview"
        android:layout_width="@dimen/brand_distributor_width"
        android:layout_height="@dimen/brand_distributor_height"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/brand_selected_imagebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/brand_selection_selector" />

    <TextView
        android:id="@+id/brandname_textview"
        style="@style/productname_textstyle"
        android:layout_width="@dimen/brand_distributor_width"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center" />

    <ImageButton
        android:id="@+id/brand_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:visibility="invisible"
        android:src="@drawable/edit_button_selector" />

</RelativeLayout>