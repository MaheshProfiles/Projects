<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="left|center"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/payment_date_textview"
        style="@style/customermgmt_name_textstyle"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:fontFamily="roboto-regular"
        android:gravity="center" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/divider_color" />

    <TextView
        android:id="@+id/payment_bill_no_textview"
        style="@style/customermgmt_name_textstyle"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/divider_color" />

    <TextView
        android:id="@+id/payment_bill_amount_textview"
        style="@style/customermgmt_name_textstyle"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/divider_color" />

    <TextView
        android:id="@+id/payment_credit_given_textview"
        style="@style/customermgmt_name_textstyle"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/divider_color" />
	<TextView
        android:id="@+id/payment_payment_mode_textview"
        style="@style/customermgmt_name_textstyle"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/divider_color" />
    <TextView
        android:id="@+id/payment_textview"
        style="@style/customermgmt_name_textstyle"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/divider_color" />

    <TextView
        android:id="@+id/payment_credit_due_textview"
        style="@style/customermgmt_name_textstyle"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp" />

</LinearLayout>