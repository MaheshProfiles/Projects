<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="90%"
            android:pivotY="-50%"
            android:toDegrees="45" >
            <shape android:shape="rectangle" >
                <solid android:color="@color/settings_red_button_color"></solid>
                <stroke
                    android:width="1dp"
                    android:color="@color/settings_red_button_color" />
            </shape>
        </rotate>
    </item>
</layer-list>