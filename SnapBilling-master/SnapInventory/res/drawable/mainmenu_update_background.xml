<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"><layer-list>
            <item android:bottom="1dp" android:top="1dp"><shape android:shape="rectangle">
                    <solid android:color="@color/inventory_update_button_colour" />
                </shape></item>
            <item><bitmap android:gravity="center" android:src="@drawable/icon_home_update" />
            </item>
        </layer-list></item>
    <item android:state_pressed="true"><layer-list>
            <item android:bottom="1dp" android:top="1dp"><shape android:shape="rectangle">
                    <solid android:color="@color/inventory_update_button_pressed_colour" />
                </shape></item>
            <item><bitmap android:gravity="center" android:src="@drawable/icon_home_update" />
            </item>
        </layer-list></item>

</selector>