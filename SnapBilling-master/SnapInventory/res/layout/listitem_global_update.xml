<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/inventory_update_item_height"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="@dimen/inventory_update_item_height" 
        android:background="@color/product_bgcolor_light">

        <ImageView
            android:id="@+id/update_global_prod_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/update_global_prod_button_selected"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/product_checked_selector" />
    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/divider_color" />

    <TextView
        android:id="@+id/update_global_prod_name"
        style="@style/update_product_textstyle"
        android:layout_width="220dp"
        android:layout_height="match_parent" 
        android:background="@color/product_bgcolor_light"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/divider_color" />

    <TextView
        android:id="@+id/update_global_prod_price"
        style="@style/update_product_textstyle"
        android:layout_width="100dp"
        android:layout_height="match_parent" 
        android:background="@color/product_bgcolor_light"/>

</LinearLayout>