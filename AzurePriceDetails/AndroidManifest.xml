<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sysfore.azurepricedetails"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sysfore.azurepricedetails.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/MyTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sysfore.azurepricedetails.Registration"
            android:label="@string/register_signup"
            android:theme="@style/MyTheme" />
        <activity
            android:name="com.sysfore.azurepricedetails.ForgotPassword"
            android:label="@string/forgot_password"
            android:theme="@style/MyTheme" />
        <activity
            android:name="com.sysfore.azurepricedetails.SubscriptionActivity"
            android:theme="@style/MyTheme" />
        <activity
            android:name="com.sysfore.azurepricedetails.SubscriptionFragment"
            android:theme="@style/MyTheme" />
        <activity
            android:name="com.sysfore.azurepricedetails.Pricemenu"
            android:theme="@style/MyTheme" />
        <activity
            android:name="com.sysfore.azurepricedetails.UpdateAccountDetails"
            android:theme="@style/MyTheme" />
        <activity
            android:name="com.sysfore.azurepricedetails.ChangePassword"
            android:label="@string/changepassword"
            android:theme="@style/MyTheme" />
        <activity
            android:name="com.sysfore.azurepricedetails.PriceDetails"
            android:theme="@style/MyTheme" />
        <activity android:name=".Filepicker" >
        </activity>
    </application>

</manifest>