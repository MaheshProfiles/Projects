<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/visiblity_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_background_color"
        android:orientation="horizontal"
        android:padding="@dimen/medium_padding"
        android:visibility="gone"
        android:weightSum="3" >

        <RelativeLayout
            android:id="@+id/visibility_item1_relativelayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/medium_padding"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/save_textview"
                style="@style/snap_textstyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/small_padding"
                android:background="@drawable/offer_badge_blue"
                android:gravity="center"
                android:paddingTop="@dimen/medium_padding"
                android:textColor="@android:color/white"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_name_visibility_textview"
                style="@style/snap_textstyle"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_alignParentTop="true"
                android:background="@color/visibility_product_name_bg_color"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/medium_padding"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="36sp" />

            <LinearLayout
                android:id="@+id/price_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="@dimen/medium_padding"
                android:background="@drawable/price_tag_yellow"
                android:gravity="center|left"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/rupee_textview"
                    style="@style/snap_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="top"
                    android:text="@string/rupee_symbol"
                    android:textColor="@android:color/black"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/pricemrp_textview"
                    style="@style/snap_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="top"
                    android:paddingTop="5dp"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/pricesp_textview"
                    style="@style/snap_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/black"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/offer_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/offer_badge_yellow"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="36sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/visibility_item2_relativelayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/medium_padding"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/save_textview"
                style="@style/snap_textstyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/small_padding"
                android:background="@drawable/offer_badge_blue"
                android:gravity="center"
                android:paddingTop="@dimen/medium_padding"
                android:textColor="@android:color/white"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_name_visibility_textview"
                style="@style/snap_textstyle"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_alignParentTop="true"
                android:background="@color/visibility_product_name_bg_color"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/medium_padding"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="36sp" />

            <LinearLayout
                android:id="@+id/price_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="@dimen/medium_padding"
                android:background="@drawable/price_tag_grey"
                android:gravity="center|left"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/rupee_textview"
                    style="@style/snap_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="top"
                    android:text="@string/rupee_symbol"
                    android:textColor="@android:color/black"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/pricemrp_textview"
                    style="@style/snap_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="top"
                    android:paddingTop="5dp"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/pricesp_textview"
                    style="@style/snap_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/black"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/offer_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/offer_badge_yellow"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="36sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/visibility_item3_relativelayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/medium_padding"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/save_textview"
                style="@style/snap_textstyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/small_padding"
                android:background="@drawable/offer_badge_blue"
                android:gravity="center"
                android:paddingTop="@dimen/medium_padding"
                android:textColor="@android:color/white"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_name_visibility_textview"
                style="@style/snap_textstyle"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_alignParentTop="true"
                android:background="@color/visibility_product_name_bg_color"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/medium_padding"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="36sp" />

            <LinearLayout
                android:id="@+id/price_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="@dimen/medium_padding"
                android:background="@drawable/price_tag_green"
                android:gravity="center|left"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/rupee_textview"
                    style="@style/snap_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="top"
                    android:text="@string/rupee_symbol"
                    android:textColor="@android:color/black"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/pricemrp_textview"
                    style="@style/snap_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="top"
                    android:paddingTop="5dp"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/pricesp_textview"
                    style="@style/snap_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/black"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/offer_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/offer_badge_yellow"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="36sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_campaign"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="7dp"
        android:visibility="gone" >

        <RelativeLayout
            android:id="@+id/visibility_campaign"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>