<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="@string/monitormachine"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_size"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearlayput02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/total"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="100" >

        <TextView
            android:id="@+id/machine01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="33"
            android:text="@string/machine1"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size" />

        <ImageView
            android:id="@+id/image01"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="35"
            android:background="@drawable/arrow_white"
            android:contentDescription="@string/progress" />

        <ImageView
            android:id="@+id/button01"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="8"
            android:contentDescription="@string/progress"
            android:gravity="center"
            android:src="@drawable/indicator_white"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayput03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlayput02"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:weightSum="100" >

        <TextView
            android:id="@+id/machine02"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="33"
            android:text="@string/machine2"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size" />

        <ImageView
            android:id="@+id/image02"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="35"
            android:background="@drawable/arrow_white"
            android:contentDescription="@string/progress" />

        <ImageView
            android:id="@+id/button02"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="8"
            android:contentDescription="@string/progress"
            android:gravity="center"
            android:src="@drawable/indicator_white"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayput04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlayput03"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:weightSum="100" >

        <TextView
            android:id="@+id/machine03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="33"
            android:text="@string/machine3"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size" />

        <ImageView
            android:id="@+id/image03"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="35"
            android:background="@drawable/arrow_white"
            android:contentDescription="@string/progress" />

        <ImageView
            android:id="@+id/button03"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="8"
            android:contentDescription="@string/progress"
            android:gravity="center"
            android:src="@drawable/indicator_white"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>