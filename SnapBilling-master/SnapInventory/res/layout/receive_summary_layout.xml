<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_transparent_color"
    android:clickable="true" >

    <Button
        android:id="@+id/receive_summary_overlay_button"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/receive_summary_scrollview"
        android:background="@drawable/receive_slidein_selector" />

    <ScrollView
        android:id="@+id/receive_summary_scrollview"
        android:layout_width="@dimen/stock_summary_width"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true" >

        <RelativeLayout
            android:id="@+id/summary_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/expandable_listview_product_mrp_bgcolor" >

            <RelativeLayout
                android:id="@+id/receive_summary_distributor_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_padding"
                android:layout_marginRight="@dimen/small_padding"
                android:layout_marginTop="@dimen/small_padding"
                android:background="@drawable/shadow_effect" >

                <TextView
                    android:id="@+id/receive_summary_agency_name_text_view"
                    style="@style/stock_summary_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/medium_padding"
                    android:layout_marginTop="@dimen/medium_padding" />

                <TextView
                    android:id="@+id/receive_summary_distributor_brands_text_view"
                    style="@style/stock_summary_textstyle"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/receive_summary_agency_name_text_view"
                    android:layout_marginLeft="@dimen/medium_padding"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/receive_summary_distributor_number_text_view"
                    style="@style/stock_summary_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/receive_summary_distributor_brands_text_view"
                    android:layout_marginLeft="@dimen/medium_padding" />

                <TextView
                    android:id="@+id/receive_summary_invoice_text"
                    style="@style/stock_summary_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/receive_summary_distributor_number_text_view"
                    android:layout_marginLeft="@dimen/medium_padding"
                    android:text="Invoice Number" />

                <ImageView
                    android:id="@+id/receive_summary_invoice_image_view"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/medium_padding"
                    android:layout_marginTop="@dimen/medium_padding"
                    android:src="@drawable/icon_camera" />

                <com.snapbizz.snaptoolkit.customviews.SoftInputEditText
                    android:id="@+id/receive_summary_invoice_number_edit_text"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/receive_summary_invoice_text"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/receive_summary_distributor_number_text_view"
                    android:singleLine="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/receive_summary_bill_info_layout"
                android:layout_width="@dimen/stock_summary_card_width"
                android:layout_height="wrap_content"
                android:layout_below="@+id/receive_summary_distributor_info_layout"
                android:layout_marginLeft="@dimen/small_padding"
                android:layout_marginRight="@dimen/small_padding"
                android:layout_marginTop="@dimen/small_padding"
                android:background="@drawable/shadow_effect" >

                <TextView
                    android:id="@+id/receive_summary_line_item_text"
                    style="@style/stock_summary_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/stock_summary_lineitem_height"
                    android:layout_marginLeft="@dimen/medium_padding"
                    android:layout_marginTop="@dimen/medium_padding"
                    android:text="@string/line_items" />

                <TextView
                    android:id="@+id/receive_summary_line_item_text_view"
                    style="@style/stock_summary_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/stock_summary_lineitem_height"
                    android:layout_alignBaseline="@+id/receive_summary_line_item_text"
                    android:layout_alignParentRight="true"
                    android:paddingRight="@dimen/medium_padding"
                    android:paddingTop="@dimen/medium_padding" />

                <TextView
                    android:id="@+id/receive_summary_quantity_text"
                    style="@style/stock_summary_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/stock_summary_lineitem_height"
                    android:layout_below="@+id/receive_summary_line_item_text"
                    android:layout_marginLeft="@dimen/medium_padding"
                    android:layout_marginTop="@dimen/medium_padding"
                    android:text="@string/distributor_product_quantity" />

                <TextView
                    android:id="@+id/receive_summary_quantity_text_view"
                    style="@style/stock_summary_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/stock_summary_lineitem_height"
                    android:layout_alignBaseline="@+id/receive_summary_quantity_text"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/receive_summary_line_item_text_view"
                    android:layout_marginTop="@dimen/medium_padding"
                    android:paddingRight="@dimen/medium_padding" />

                <TextView
                    android:id="@+id/receive_summary_mrp_text"
                    style="@style/stock_summary_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/stock_summary_lineitem_height"
                    android:layout_below="@+id/receive_summary_quantity_text"
                    android:layout_marginBottom="@dimen/medium_padding"
                    android:layout_marginLeft="@dimen/medium_padding"
                    android:layout_marginTop="@dimen/medium_padding"
                    android:text="@string/mrp" />

                <TextView
                    android:id="@+id/receive_summary_mrp_text_view"
                    style="@style/stock_summary_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/stock_summary_lineitem_height"
                    android:layout_alignBaseline="@+id/receive_summary_mrp_text"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/receive_summary_quantity_text_view"
                    android:layout_marginBottom="@dimen/medium_padding"
                    android:layout_marginTop="@dimen/medium_padding"
                    android:paddingRight="@dimen/medium_padding" />

                <View
                    android:layout_width="@dimen/stock_summary_view_width"
                    android:layout_height="1dp"
                    android:layout_below="@+id/receive_summary_line_item_text"
                    android:background="@color/stock_summary_divider_color" />

                <View
                    android:layout_width="@dimen/stock_summary_view_width"
                    android:layout_height="1dp"
                    android:layout_below="@+id/receive_summary_quantity_text"
                    android:background="@color/stock_summary_divider_color" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/receive_summary_details_layout"
                android:layout_width="@dimen/stock_summary_card_width"
                android:layout_height="wrap_content"
                android:layout_below="@+id/receive_summary_bill_info_layout"
                android:layout_marginLeft="@dimen/small_padding"
                android:layout_marginRight="@dimen/small_padding"
                android:layout_marginTop="@dimen/small_padding"
                android:background="@drawable/shadow_effect" >

                <TextView
                    android:id="@+id/receive_summary_purchase_value_text"
                    style="@style/stock_summary_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/stock_summary_lineitem_height"
                    android:layout_marginLeft="@dimen/medium_padding"
                    android:layout_marginTop="@dimen/medium_padding"
                    android:text="Purchase Value" />

                <TextView
                    android:id="@+id/receive_summary_purchase_value_text_view"
                    style="@style/stock_summary_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/stock_summary_lineitem_height"
                    android:layout_alignBaseline="@+id/receive_summary_purchase_value_text"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/medium_padding" />

                <TextView
                    android:id="@+id/receive_summary_tax_text"
                    style="@style/stock_summary_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/stock_summary_lineitem_height"
                    android:layout_below="@+id/receive_summary_purchase_value_text"
                    android:layout_marginLeft="@dimen/medium_padding"
                    android:layout_marginTop="@dimen/medium_padding"
                    android:text="VAT" />

                <TextView
                    android:id="@+id/receive_summary_tax_text_view"
                    style="@style/stock_summary_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/stock_summary_lineitem_height"
                    android:layout_alignBaseline="@+id/receive_summary_tax_text"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/receive_summary_purchase_value_text_view"
                    android:layout_marginRight="@dimen/medium_padding" />

                <!--
                     <TextView
                    android:id="@+id/receive_summary_schemes_text"
                    style="@style/stock_summary_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/stock_summary_lineitem_height"
                    android:layout_below="@+id/receive_summary_tax_text"
                    android:layout_marginLeft="@dimen/medium_padding"
                    android:layout_marginTop="@dimen/medium_padding"
                    android:text="Schemes" />
                -->

                <TextView
                    android:id="@+id/receive_summary_schemes_text_view"
                    style="@style/stock_summary_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/stock_summary_lineitem_height"
                    android:layout_alignBaseline="@+id/receive_summary_tax_text"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/receive_summary_tax_text_view"
                    android:layout_marginRight="@dimen/medium_padding"
                    android:layout_marginTop="@dimen/medium_padding" />

                <TextView
                    android:id="@+id/receive_summary_discount_text"
                    style="@style/stock_summary_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/stock_summary_lineitem_height"
                    android:layout_below="@+id/receive_summary_tax_text"
                    android:layout_marginLeft="@dimen/medium_padding"
                    android:layout_marginTop="@dimen/medium_padding"
                    android:text="@string/discount" />

                <TextView
                    android:id="@+id/receive_summary_discount_text_view"
                    style="@style/stock_summary_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/stock_summary_lineitem_height"
                    android:layout_alignBaseline="@+id/receive_summary_discount_text"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/receive_summary_schemes_text_view"
                    android:layout_marginRight="@dimen/medium_padding"
                    android:layout_marginTop="@dimen/medium_padding" />

                <TextView
                    android:id="@+id/receive_summary_net_payable_text"
                    style="@style/stock_summary_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/receive_summary_discount_text"
                    android:layout_marginLeft="@dimen/medium_padding"
                    android:layout_marginTop="@dimen/medium_padding"
                    android:text="Net Payable" />

                <TextView
                    android:id="@+id/receive_summary_net_payable_text_view"
                    style="@style/stock_summary_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/receive_summary_net_payable_text"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/receive_summary_discount_text_view"
                    android:layout_marginRight="@dimen/medium_padding"
                    android:layout_marginTop="@dimen/medium_padding" />

                <View
                    android:layout_width="@dimen/stock_summary_view_width"
                    android:layout_height="1dp"
                    android:layout_below="@+id/receive_summary_purchase_value_text"
                    android:background="@color/stock_summary_divider_color" />

                <View
                    android:layout_width="@dimen/stock_summary_view_width"
                    android:layout_height="1dp"
                    android:layout_below="@+id/receive_summary_tax_text"
                    android:background="@color/stock_summary_divider_color" />

                <!--
                     <View
                    android:layout_width="@dimen/stock_summary_view_width"
                    android:layout_height="1dp"
                    android:layout_below="@+id/receive_summary_schemes_text"
                    android:background="@color/stock_summary_divider_color" />
                -->

                <View
                    android:layout_width="@dimen/stock_summary_view_width"
                    android:layout_height="1dp"
                    android:layout_below="@+id/receive_summary_discount_text"
                    android:background="@color/stock_summary_divider_color" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/receive_summary_payment_layout"
                android:layout_width="@dimen/stock_summary_width"
                android:layout_height="wrap_content"
                android:layout_below="@+id/receive_summary_details_layout"
                android:layout_marginLeft="@dimen/small_padding"
                android:layout_marginRight="@dimen/small_padding"
                android:layout_marginTop="@dimen/small_padding"
                android:background="@drawable/shadow_effect" >

                <TextView
                    android:id="@+id/receive_summary_distributor_name_text"
                    style="@style/stock_summary_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/stock_summary_lineitem_height"
                    android:layout_marginLeft="@dimen/medium_padding"
                    android:layout_marginTop="@dimen/medium_padding"
                    android:text="@string/salesman" />

                <TextView
                    android:id="@+id/receive_summary_distributor_name_text_view"
                    style="@style/stock_summary_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/stock_summary_lineitem_height"
                    android:layout_alignBaseline="@+id/receive_summary_distributor_name_text"
                    android:layout_alignParentRight="true"
                    android:paddingRight="@dimen/medium_padding"
                    android:singleLine="true" />

                <Spinner
                    android:id="@+id/receive_summary_payment_mode_spinner"
                    android:layout_width="100dp"
                    android:layout_height="@dimen/stock_summary_lineitem_height"
                    android:layout_below="@+id/receive_summary_distributor_name_text_view"
                    android:layout_marginLeft="@dimen/medium_padding"
                    android:entries="@array/payment_mode" />

                <TextView
                    android:id="@+id/receive_summary_payment_amount_text_view"
                    style="@style/stock_summary_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/stock_summary_lineitem_height"
                    android:layout_alignBaseline="@+id/receive_summary_payment_mode_spinner"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/receive_summary_distributor_name_text_view"
                    android:paddingRight="@dimen/medium_padding" />

                <View
                    android:layout_width="@dimen/stock_summary_view_width"
                    android:layout_height="1dp"
                    android:layout_below="@+id/receive_summary_distributor_name_text_view"
                    android:background="@color/stock_summary_divider_color" />
            </RelativeLayout>

            <Button
                android:id="@+id/receive_summary_cancel_button"
                style="@style/snap_textstyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/receive_summary_payment_layout"
                android:layout_marginBottom="@dimen/medium_padding"
                android:layout_marginLeft="@dimen/medium_padding"
                android:layout_marginTop="@dimen/medium_padding"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/summary_cancel_button_selector"
                android:drawablePadding="@dimen/small_padding"
                android:text="@string/cancel"
                android:textColor="@drawable/summary_cancel_button_textcolor_selector"
                android:textSize="20sp" />

            <Button
                android:id="@+id/receive_summary_confirm_button"
                style="@style/snap_textstyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/receive_summary_payment_layout"
                android:layout_marginBottom="@dimen/medium_padding"
                android:layout_marginLeft="@dimen/medium_padding"
                android:layout_marginTop="@dimen/medium_padding"
                android:layout_toRightOf="@+id/receive_summary_cancel_button"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/summary_confirm_button_selector"
                android:drawablePadding="@dimen/small_padding"
                android:paddingRight="@dimen/medium_padding"
                android:text="@string/confirm"
                android:textColor="@drawable/summary_confirm_button_textcolor_selector"
                android:textSize="20sp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>