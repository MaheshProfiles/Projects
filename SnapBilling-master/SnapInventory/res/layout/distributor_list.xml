<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="70dp"
    android:background="@android:color/transparent"
    android:descendantFocusability="blocksDescendants" >

    <TextView
        android:id="@+id/distributor_list_text"
        style="@style/snap_textstyle"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:background="@drawable/distributor_griditem_bgselector"
        android:gravity="left|"
        android:maxLength="25"
        android:paddingLeft="@dimen/small_padding"
        android:paddingTop="@dimen/small_padding"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/distributor_header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@drawable/bttn_alphabets_normal"
        android:gravity="center"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/distributor_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/distributor_list_text"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/small_padding"
        android:background="@drawable/edit_button_selector"
        android:visibility="visible" />

    <TextView
        android:id="@+id/distributor_companies_text"
        style="@style/snap_textstyle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/small_padding"
        android:gravity="left"
        android:paddingLeft="@dimen/small_padding"
        android:singleLine="true"
        android:textSize="14sp" />

</RelativeLayout>