<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/actionbar_receive_id_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View
        android:id="@+id/actionbar_divider_view"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/small_padding"
        android:background="@color/actionbar_order_divider_color" />

    <RelativeLayout
        android:id="@+id/actionbar_receive_distributor_information_layout"
        android:layout_width="@dimen/actionbar_menu_item_width"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/small_padding"
        android:layout_toRightOf="@+id/actionbar_divider_view" >

        <ImageView
            android:id="@+id/receive_menu_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"
            android:background="@drawable/actionbar_receive_image_selector" />

        <TextView
            android:id="@+id/order_menu_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_padding"
            android:layout_marginTop="@dimen/small_padding"
            android:layout_toRightOf="@+id/receive_menu_image_button"
            android:gravity="center_vertical"
            android:text="@string/receive"
            android:textColor="@drawable/actionbar_receive_distributor_info_textcolor_selector"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/distributor_name_textview"
            style="@style/actionbar_order_distributor_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_menu_name_textview"
            android:layout_marginLeft="@dimen/medium_padding"
            android:layout_toRightOf="@+id/receive_menu_image_button"
            android:textColor="@drawable/actionbar_receive_distributor_info_textcolor_selector" />

        <TextView
            android:id="@+id/distributor_company_name_textview"
            style="@style/actionbar_order_distributor_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/distributor_name_textview"
            android:layout_marginLeft="@dimen/medium_padding"
            android:layout_toRightOf="@+id/receive_menu_image_button"
            android:textColor="@drawable/actionbar_receive_distributor_info_textcolor_selector" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/receive_category_layout"
        android:layout_width="@dimen/actionbar_menu_item_width"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/actionbar_receive_distributor_information_layout"
        android:clickable="true" >

        <ImageView
            android:id="@+id/receive_category_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="75dp"
            android:background="@drawable/actionbar_category_image_selector" />

        <TextView
            android:id="@+id/receive_category_name_textview"
            style="@style/actionbar_order_category_textstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_padding"
            android:layout_marginTop="@dimen/medium_padding"
            android:layout_toRightOf="@+id/receive_category_imageview" />

        <TextView
            android:id="@+id/receive_sub_category_name_textview"
            style="@style/actionbar_order_category_textstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/receive_category_name_textview"
            android:layout_marginLeft="@dimen/medium_padding"
            android:layout_toRightOf="@+id/receive_category_imageview" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/receive_brands_layout"
        android:layout_width="@dimen/actionbar_menu_item_width"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/search_layout"
        android:layout_toRightOf="@+id/receive_category_layout"
        android:visibility="invisible"
        android:clickable="true" >

        <ImageView
            android:id="@+id/receive_brand_filter_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:background="@drawable/actionbar_brand_image_selector" />

        <TextView
            style="@style/actionbar_order_category_textstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/medium_padding"
            android:layout_toRightOf="@+id/receive_brand_filter_imageview"
            android:text="@string/multiple_brands" />
    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/small_padding"
        android:layout_toRightOf="@+id/actionbar_receive_distributor_information_layout"
        android:background="@color/actionbar_order_divider_color" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/small_padding"
        android:layout_toRightOf="@+id/receive_category_layout"
        android:background="@color/actionbar_order_divider_color" />

    <RelativeLayout
        android:id="@+id/search_layout"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="visible" >
        
        <TextView
            style="@style/actionbar_order_category_textstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/search_products" />
        
        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:background="@drawable/icon_search_normal" />

        <com.snapbizz.snaptoolkit.customviews.SoftInputEditText
            android:id="@+id/search_edittext"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/clear_search_text_button"
            android:ems="10" />

        <requestFocus />

        <Button
            android:id="@+id/clear_search_text_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_cancel_red_small" />
    </RelativeLayout>

</RelativeLayout>